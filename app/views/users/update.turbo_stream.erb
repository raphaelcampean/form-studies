	<script>
		var modal = document.getElementById('exampleModal');
		if (modal) {
			var modalInstance = bootstrap.Modal.getInstance(modal) || new bootstrap.Modal(modal);
			modalInstance.hide();
		}
	</script>
<% end %>

<%= turbo_stream.prepend "flash", partial: 'shared/flash' %>